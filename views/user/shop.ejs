                                                                <span class="old-price" style="text-decoration: line-through; color: #999; margin-left: 10px;">
                                                                    ₹<%= product.regularPrice %>
                                                                </span>
                                                            </div>
                                                        <% } else { %>
                                                            <div class="product-price">
                                                                <span>₹<%= product.regularPrice %></span>
                                                            </div>
                                                        <% } %>
                                                    </div>

                                                    

