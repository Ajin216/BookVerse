            document.addEventListener('DOMContentLoaded', function () {
                const filterForm = document.getElementById('filterForm');
                const clearAllButton = document.getElementById('clearAllFilters');
                const filterInputs = document.querySelectorAll('.filter-input');

                // Function to handle filter changes
                function handleFilterChange() {
                    // Prevent multiple submissions
                    if (!filterForm.dataset.submitting) {
                        filterForm.dataset.submitting = 'true';

                        // Submit form
                        filterForm.submit();
                    }
                }

                // Add event listeners to all filter inputs
                filterInputs.forEach(input => {
                    input.addEventListener('change', handleFilterChange);
                });

                // Prevent double submission
                filterForm.addEventListener('submit', function () {
                    setTimeout(() => {
                        filterForm.dataset.submitting = '';
                    }, 1000);
                });

                // Clear All Filters functionality
                if (clearAllButton) {
                    clearAllButton.addEventListener('click', function (e) {
                        e.preventDefault();

                        // Reset all filter inputs
                        filterInputs.forEach(input => {
                            if (input.tagName === 'SELECT') {
                                input.selectedIndex = 0; // Reset to first option
                            } else if (input.type === 'number') {
                                input.value = ''; // Clear number inputs
                            }
                        });

                        // Redirect to shop page without filters
                        window.location.href = '/shop';
                    });
                }
            });




