            <div class="container order-summary-container">
                <div class="card order-card">
                    <div class="order-header">
                        <h2>Order Summary</h2>
                        <span class="badge bg-light text-dark">#<%= order.orderId %></span>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="address-section">
                                    <h4 class="mb-3 text-primary">Shipping Address</h4>
                                    <p class="mb-1"><strong>
                                            <%= address.addressName %>
                                        </strong></p>
                                    <p class="mb-1">
                                        <%= address.addressHouse %>
                                    </p>
                                    <p class="mb-1">
                                        <%= address.addressPost %>, <%= address.addressDistrict %>
                                    </p>
                                    <p class="mb-1">
                                        <%= address.addressState %> - <%= address.addressPin %>
                                    </p>
                                    <p class="mb-1">📞 <%= address.addressMobile %>
                                    </p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="address-section">
                                    <h4 class="mb-3 text-primary">Order Information</h4>
                                    <p class="mb-1"><strong>Order Date:</strong>
                                        <%= order.createdAt.toLocaleDateString() %>
                                    </p>
                                    <p class="mb-1"><strong>Payment Method:</strong>
                                        <%= order.paymentMethod %>
                                    </p>
                                    <p class="mb-1">
                                        <strong>Order Status:</strong>
                                        <span class="badge status-badge <%= 
                                            order.order_status === 'Delivered' ? 'bg-success' :
                                            order.order_status === 'Processing' ? 'bg-warning' :
                                            order.order_status === 'Cancelled' ? 'bg-danger' :
                                            'bg-secondary'
                                        %>">
                                            <%= order.order_status %>
                                        </span>
                                    </p>

                                    <!-- Add the Retry Payment button here -->
                                    <% if (order.payment_status==='Pending' && order.paymentMethod==='Razor Pay' ) { %>
                                        <div class="mt-3">
                                            <button class="btn btn-success"
                                                onclick="retryPayment('<%= order.orderId %>', '<%= order.totalPrice %>', '<%= order._id %>')">
                                                Retry Payment
                                            </button>
                                        </div>
                                        <% } %>
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive table-order">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>SI No.</th>
                                        <th>Product Image</th>
                                        <th>Product Name</th>
                                        <th>Category</th>
                                        <th>Quantity</th>
                                        <th>Price</th>
                                        <th>Coupon Discount</th>
                                        <th>Product Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>



                                <tbody>
                                    <% items.forEach((item, index)=> { %>
                                        <tr data-item-id="<%= item._id.toString() %>">
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <img src="<%= item.productId.productImage[0] %>"
                                                    alt="<%= item.productId.productName %>" class="product-thumbnail">
                                            </td>
                                            <td>
                                                <%= item.productId.productName %>
                                            </td>
                                            <td>
                                                <%= item.productId.category.name %>
                                            </td>
                                            <td>
                                                <%= item.quantity %>
                                            </td>
                                            <td>₹<%= item.price.toFixed(2) %>
                                            </td>
                                            <td>₹<%= item.subtotal.toFixed(2) %>
                                            </td>
                                            <td>
                                                <% if (item.status==='Cancelled' ) { %>
                                                    <span class="badge bg-danger">Cancelled</span>
                                                    <% } else if (item.status==='Returned' ) { %>
                                                        <span class="badge bg-secondary">Returned</span>
                                                        <% } else { %>
                                                            <span class="badge bg-success">Active</span>
                                                            <% } %>
                                            </td>

                                            <td>
                                                <% if (item.status==='Returned' ) { %>
                                                    <!-- Disable button and change text to "Returned" -->
                                                    <button class="btn btn-secondary btn-sm" disabled>Returned</button>
                                                    <% } else if (order.order_status==='Delivered' ) { %>
                                                        <!-- Show "Return Product" button for delivered orders -->
                                                        <button class="btn btn-danger btn-sm"
                                                            onclick="returnOrderItem('<%= item._id %>', this)">
                                                            Return Product
                                                        </button>
                                                        <% } else if (item.status==='Cancelled' ) { %>
                                                            <!-- Disable button for cancelled items -->
                                                            <button class="btn btn-danger btn-sm"
                                                                disabled>Cancelled</button>
                                                            <% } else { %>
                                                                <!-- Show "Cancel Item" button for active items -->
                                                                <button class="btn btn-outline-danger btn-sm"
                                                                    onclick="cancelOrderItem('<%= item._id.toString() %>')">
                                                                    Cancel Item
                                                                </button>
                                                                <% } %>
                                            </td>
                                        </tr>
                                        <% }); %>
                                </tbody>


                                <tfoot>
                                    <tr class="table-active">
                                        <td colspan="6" class="text-end"><strong>Total Price:</strong></td>
                                        <td>₹<%= Math.round(order.totalPrice) %></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>



                        <div class="order-actions">
                            <% 
                                // Check if all items in the order are returned
                                const allItemsReturned = order.items.every(item => item.status === 'Returned');
                            %>
                            
                            <% if (order.order_status === 'Delivered' || order.order_status === 'Cancelled' || allItemsReturned) { %>
                                <!-- Disable the "Cancel All Orders" button if the order is Delivered, Cancelled, or all items are returned -->
                                <button type="button" class="btn btn-danger" disabled>
                                    <%= allItemsReturned ? 'All Items Returned' : 'Cancel All Orders' %>
                                </button>
                            <% } else { %>
                                <!-- Show the "Cancel All Orders" button with modal functionality -->
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#cancelOrderModal">
                                    Cancel All Orders
                                </button>
                            <% } %>
                            
                            <!-- Back to Orders button -->
                            <a href="/order" class="btn btn-outline-primary">Back to Orders</a>
                        </div>


                        <div class="modal fade" id="cancelOrderModal" tabindex="-1"
                            aria-labelledby="cancelOrderModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="cancelOrderModalLabel">Cancel Order</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <form id="cancelAllOrderForm" method="POST">
                                        <div class="modal-body">
                                            <div class="mb-3">
                                                <label for="cancelReason" class="form-label">Reason for
                                                    Cancellation</label>
                                                <select class="form-select" id="cancelReason" name="cancelReason"
                                                    required>
                                                    <option value="">Select a reason</option>
                                                    <option value="Changed mind">Changed mind</option>
                                                    <option value="Found better price">Found better price</option>
                                                    <option value="Delivery takes too long">Delivery takes too long
                                                    </option>
                                                    <option value="Product no longer needed">Product no longer needed
                                                    </option>
                                                    <option value="Other">Other</option>
                                                </select>
                                            </div>
                                            <div id="otherReasonContainer" style="display:none;">
                                                <label for="otherReason" class="form-label">Please specify other
                                                    reason</label>
                                                <textarea class="form-control" id="otherReason" name="otherCancelReason"
                                                    rows="3"></textarea>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                            <button type="submit" class="btn btn-danger" id="confirmCancelBtn">Confirm
                                                Cancel</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>


                    </div>
