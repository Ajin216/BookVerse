document.addEventListener('DOMContentLoaded', function() {
    const applyCouponBtn = document.getElementById('applyCoupon');
    const couponMessageDiv = document.getElementById('couponMessage');
    
    applyCouponBtn.addEventListener('click', async function() {
        const couponCode = document.getElementById('couponCode').value;
        if (!couponCode) {
            couponMessageDiv.innerHTML = '<div class="alert alert-danger">Please enter a coupon code</div>';
            return;
        }

        try {
            const subtotal = parseFloat(document.querySelector('.summary-subtotal td:last-child')
                .textContent.replace('₹', ''));
            
            const response = await fetch('/apply-coupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    couponCode,
                    subtotal
                })
            });

            const data = await response.json();

            if (data.success) {
                // Show success message
                couponMessageDiv.innerHTML = `<div class="alert alert-success">${data.message}</div>`;
                
                // Update discount information for each product
                data.itemDiscounts.forEach(item => {
                    const productRow = document.querySelector(`.product-row[data-product-id="${item.productId}"]`);
                    if (productRow) {
                        const discountInfo = productRow.querySelector('.discount-info');
                        const finalPrice = productRow.querySelector('.final-price');
                        const originalPrice = productRow.querySelector('.original-price');
                        
                        discountInfo.innerHTML = `Discount: -₹${item.discountPerUnit.toFixed(2)} per unit`;
                        discountInfo.style.display = 'block';
                        
                        finalPrice.innerHTML = `₹${(item.finalPrice * item.quantity).toFixed(2)}`;
                        finalPrice.style.display = 'block';
                        originalPrice.style.textDecoration = 'line-through';
                        originalPrice.style.color = '#999';
                    }
                });
                
                // Update total discount and final amount
                const discountRow = document.querySelector('.summary-discount');
                discountRow.style.display = 'table-row';
                discountRow.querySelector('td:last-child').textContent = 
                    `-₹${data.discountAmount.toFixed(2)}`;
                
                document.querySelector('.summary-total td:last-child').textContent = 
                    `₹${data.finalAmount.toFixed(2)}`;
                
                // Store coupon data
                const couponInput = document.getElementById('appliedCouponData') || 
                    document.createElement('input');
                couponInput.type = 'hidden';
                couponInput.id = 'appliedCouponData';
                couponInput.name = 'appliedCoupon';
                couponInput.value = JSON.stringify({
                    code: couponCode,
                    discountAmount: data.discountAmount,
                    discountType: data.discountType,
                    discountValue: data.discountValue,
                    itemDiscounts: data.itemDiscounts
                });
                
                if (!document.getElementById('appliedCouponData')) {
                    document.getElementById('orderForm').appendChild(couponInput);
                }
                
                // Disable coupon input and button
                document.getElementById('couponCode').disabled = true;
                applyCouponBtn.disabled = true;
                
                // Add remove coupon button if not exists
                if (!document.getElementById('removeCouponBtn')) {
                    const removeCouponBtn = document.createElement('button');
                    removeCouponBtn.id = 'removeCouponBtn';
                    removeCouponBtn.className = 'btn btn-outline-danger ms-2';
                    removeCouponBtn.textContent = 'Remove';
                    removeCouponBtn.onclick = function(e) {
                        e.preventDefault();
                        resetCouponApplication();
                    };
                    applyCouponBtn.after(removeCouponBtn);
                }
            } else {
                couponMessageDiv.innerHTML = `<div class="alert alert-danger">${data.message}</div>`;
            }
        } catch (error) {
            console.error('Error applying coupon:', error);
            couponMessageDiv.innerHTML = '<div class="alert alert-danger">Error applying coupon</div>';
        }
    });

    function resetCouponApplication() {
        // Reset all discount displays
        document.querySelectorAll('.discount-info').forEach(el => {
            el.style.display = 'none';
        });
        
        document.querySelectorAll('.final-price').forEach(el => {
            el.style.display = 'none';
        });
        
        document.querySelectorAll('.original-price').forEach(el => {
            el.style.textDecoration = 'none';
            el.style.color = 'inherit';
        });
        
        // Reset summary
        document.querySelector('.summary-discount').style.display = 'none';
        const subtotal = document.querySelector('.summary-subtotal td:last-child').textContent;
        document.querySelector('.summary-total td:last-child').textContent = subtotal;
        
        // Reset coupon form
        document.getElementById('couponCode').disabled = false;
        document.getElementById('couponCode').value = '';
        document.getElementById('applyCoupon').disabled = false;
        document.getElementById('couponMessage').innerHTML = '';
        
        // Remove coupon data
        const couponInput = document.getElementById('appliedCouponData');
        if (couponInput) couponInput.remove();
        
        // Remove remove button
        const removeBtn = document.getElementById('removeCouponBtn');
        if (removeBtn) removeBtn.remove();
    }
});




