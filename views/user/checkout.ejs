                                                            <th>Product</th>
                                                            <th>Total</th>
                                                        </tr>
                                                    </thead>
                                                    

                                                    <tbody>
                                                        <% let subtotal = 0; %>
                                                        <% if (cartItems && cartItems.length > 0) { %>
                                                            <% cartItems.forEach(item => { %>
                                                                <tr class="product-row" data-product-id="<%= item.productId._id %>">
                                                                    <td>
                                                                        <a href="/productDetails/<%= item.productId._id %>">
                                                                            <%= item.productId.productName %> 
                                                                            (x <%= item.quantity %>)
                                                                        </a>
                                                                        <div class="discount-info" style="display: none; font-size: 0.9em; color: #28a745;"></div>
                                                                    </td>
                                                                    <% 
                                                                        const priceToUse = item.productId.bestDiscount > 0 ? 
                                                                            item.productId.discountedPrice : 
                                                                            item.productId.regularPrice;
                                                                        const itemTotal = priceToUse * item.quantity;
                                                                        subtotal += itemTotal;
                                                                    %>
                                                                    <td>
                                                                        <span class="original-price">₹<%= itemTotal.toFixed(2) %></span>
                                                                        <div class="final-price" style="display: none;"></div>
                                                                    </td>
                                                                </tr>
                                                            <% }); %>
                                                            <tr class="summary-subtotal">
                                                                <td>Subtotal:</td>
                                                                <td>₹<%= subtotal.toFixed(2) %></td>
                                                            </tr>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="2" class="text-center">Your cart is empty</td>
                                                            </tr>
                                                        <% } %>
                                                        <tr>
                                                            <td>Shipping:</td>
