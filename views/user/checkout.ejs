                                                                            <% if (coupon.isUsed) { %>
                                                                                <span class="badge bg-secondary ms-2">Already Used</span>
                                                                            <% } %>
                                                                        </div>
                                                                        <button type="button" 
                                                                                class="btn btn-sm btn-outline-primary copy-code" 
                                                                                data-code="<%= coupon.couponId %>"
                                                                                <% if (coupon.isUsed) { %>disabled<% } %>>
                                                                            <%= coupon.isUsed ? 'Already Used' : 'Copy Code' %>
                                                                        </button>
                                                                    </div>
                                                                    <div class="small text-muted mt-1">
                                                                        <%= coupon.description %>
                                                                    </div>
