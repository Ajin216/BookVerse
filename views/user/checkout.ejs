    // Get elements
    const cashOnDeliveryRadio = document.getElementById('cashOnDelivery');
    const totalPriceElement = document.querySelector('.summary-total td:last-child');
    
    // Check if elements exist
    if (cashOnDeliveryRadio && totalPriceElement) {
        // Extract total price value (remove the ₹ symbol and convert to number)
        const totalPrice = parseFloat(totalPriceElement.textContent.replace('₹', '').trim());
        
        // Check if total price exceeds Rs 1000
        if (totalPrice > 1000) {
            // Disable COD option
            cashOnDeliveryRadio.disabled = true;
            
            // Create a message to explain why COD is disabled
            const messageElement = document.createElement('div');
            messageElement.className = 'text-danger mt-1 small';
            messageElement.innerHTML = 'Cash on Delivery is not available for orders over ₹1,000';
            
            // Insert message after the COD label
            const codLabel = document.querySelector('label[for="cashOnDelivery"]');
            codLabel.parentNode.appendChild(messageElement);
            
            // If COD was pre-selected, unselect it
            if (cashOnDeliveryRadio.checked) {
                cashOnDeliveryRadio.checked = false;
            }
        }
    }
    
    // Also need to update this if a coupon changes the total price
    const applyCouponBtn = document.getElementById('applyCoupon');
    if (applyCouponBtn) {
        applyCouponBtn.addEventListener('click', function() {
            // Wait for coupon to be applied and total to be updated
            setTimeout(function() {
                const updatedTotal = parseFloat(document.querySelector('.summary-total td:last-child').textContent.replace('₹', '').trim());
                
                if (updatedTotal > 1000) {
                    cashOnDeliveryRadio.disabled = true;
                    
                    // Add message if it doesn't exist
                    if (!document.querySelector('label[for="cashOnDelivery"] + .text-danger')) {
                        const messageElement = document.createElement('div');
