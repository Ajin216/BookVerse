                messageElement.className = 'text-danger mt-1 small wallet-message';
                messageElement.innerHTML = 'Error checking wallet balance';
                
                // Insert message after the wallet label
                const walletLabel = document.querySelector('label[for="wallet"]');
                walletLabel.parentNode.appendChild(messageElement);
            }
        } else {
            // Remove the wallet message when unchecked
