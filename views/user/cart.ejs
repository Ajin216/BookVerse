    <script>





document.addEventListener('DOMContentLoaded', function () {
    // Handle quantity changes
    const quantityInputs = document.querySelectorAll('.quantity-input');
    quantityInputs.forEach(input => {
        input.addEventListener('change', function () {
            const cartItemId = this.getAttribute('data-cart-item-id');
            const newQuantity = parseInt(this.value);
            const currentQuantity = parseInt(this.defaultValue);
            const maxStock = parseInt(this.getAttribute('max'));

            // Check for decrement below 1
            if (newQuantity < 1) {
                this.value = currentQuantity;
                showErrorAlert('Minimum quantity required is 1');
                return;
            }
            
            // Other existing validations
            if (newQuantity > 5) {
                this.value = 5;
                showErrorAlert('Maximum quantity allowed is 5');
                return;
            }

            updateCartItem(cartItemId, newQuantity, this);
        });

        // Prevent invalid inputs
        input.addEventListener('keypress', function (e) {
            if (e.key === '-' || e.key === '+' || e.key === 'e' || e.key === '.') {
                e.preventDefault();
            }
        });
    });
});

function showErrorAlert(message) {
    Swal.fire({
        icon: 'error',
        title: 'Oops...',
        text: message,
        confirmButtonColor: '#3085d6'
    }).then(() => {
        window.location.reload();
    });
}

function showSuccessAlert(message, autoRefresh = true) {
    // Simply refresh without showing success alert
    if (autoRefresh) {
        window.location.reload();
    }
}

function updateCartItem(cartItemId, quantity, inputElement) {
    // Show loading state without full screen Swal
    const loadingElement = document.createElement('div');
    loadingElement.className = 'cart-updating';
    loadingElement.style.position = 'fixed';
    loadingElement.style.bottom = '10px';
    loadingElement.style.right = '10px';
    loadingElement.style.background = 'rgba(0,0,0,0.7)';
    loadingElement.style.color = 'white';
    loadingElement.style.padding = '10px 15px';
    loadingElement.style.borderRadius = '5px';
    loadingElement.style.zIndex = '9999';
    loadingElement.textContent = 'Updating cart...';
    document.body.appendChild(loadingElement);

    fetch('/cart/update', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({
            cartItemId: cartItemId,
            quantity: quantity
        })
    })
        .then(response => response.json())
        .then(data => {
            document.body.removeChild(loadingElement);

            if (data.success) {
                // Store the previous value as the new default
                inputElement.defaultValue = quantity;
                // Only refresh without showing success message
                window.location.reload();
            } else {
                // Reset the input to previous valid quantity
                inputElement.value = inputElement.defaultValue;
                showErrorAlert(data.message);
            }
        })
        .catch(error => {
            if (document.body.contains(loadingElement)) {
                document.body.removeChild(loadingElement);
            }
            console.error('Error:', error);
            showErrorAlert('Error updating cart');
            // Reset to previous valid quantity on error
            inputElement.value = inputElement.defaultValue;
        });
}



function removeCartItem(cartItemId) {
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
        if (result.isConfirmed) {
            const loadingAlert = Swal.fire({
                title: 'Removing item...',
                allowOutsideClick: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });

            fetch('/cart/remove', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    cartItemId: cartItemId
                })
            })
                .then(response => response.json())
                .then(data => {
                    loadingAlert.close();

                    if (data.success) {
                        showSuccessAlert('Item removed successfully', true); // true means auto refresh
                    } else {
                        showErrorAlert(data.message);
                    }
                })
                .catch(error => {
                    loadingAlert.close();
                    console.error('Error:', error);
                    showErrorAlert('Error removing item');
                });
        }
    });
}
