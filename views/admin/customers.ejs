                            data-action="block" 
                            data-id="<%= data[i]._id %>" 
                            data-name="<%= data[i].name %>">
                      Block
                    </button>
                  <% } else { %>
                    <button class="btn btn-success confirm-action" style="width: 80px;" 
                            data-action="unblock" 
                            data-id="<%= data[i]._id %>" 
                            data-name="<%= data[i].name %>">
                      Unblock
                    </button>
                  <% } %>
                </td>
              </tr>
            <% } %>
          <% } else { %>
            <tr>
              <td colspan="4" class="text-center">No customers found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
